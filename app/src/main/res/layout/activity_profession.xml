<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sheikhsoft.bondhu.reg.ProfessionActivity">

    <ProgressBar
        android:id="@+id/profation_prograssbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/my_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profation_prograssbar"
        android:layout_marginStart="50dp"
        android:layout_marginTop="85dp"
        android:text="My"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profation_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Profassion"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/my_txt"
        android:layout_alignStart="@+id/my_txt" />


    <RadioGroup
        android:id="@+id/profassion_radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profation_txt"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_student"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="STUDENT" />

        <RadioButton
            android:id="@+id/radio_employee"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="EMPLOYEE" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/student_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:visibility="invisible"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/school_name_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp">

            <EditText
                android:id="@+id/pro_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="My school / university name" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/employee_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/company_name_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/pro_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/position_edittext_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp">

            <EditText
                android:id="@+id/pro_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Position" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <Button
        android:id="@+id/profession_finish_btn"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:text="FNISH"
        android:visibility="invisible" />


</RelativeLayout>

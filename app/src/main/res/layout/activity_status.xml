<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sheikhsoft.bondhu.StatusActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/status_page_app_bar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/status_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_page_app_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="45dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/status_your_status" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/status_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/status_status"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorAccent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/status_update_your_status"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>

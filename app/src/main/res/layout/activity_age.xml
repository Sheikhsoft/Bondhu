<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sheikhsoft.bondhu.reg.AgeActivity">

    <ProgressBar
        android:id="@+id/age_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/age_progressBar"
        android:layout_marginTop="100dp"
        android:text="My"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/birday_edit_text"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="10dp"
        android:text="birthday is"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <br.com.sapereaude.maskedEditText.MaskedEditText
        android:id="@+id/birday_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:hint="01011990"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="24sp"
        android:typeface="monospace"
        app:keep_hint="true"
        mask:allowed_chars="1234567890"
        mask:mask="##-##-####" />

    <Button
        android:id="@+id/age_contunue_btn"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:text="CONTUNUE"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/birday_edit_text"
        android:layout_below="@+id/birday_edit_text"
        android:text="Your age will be public" />



</RelativeLayout>
